<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_turquesa" >
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:orientation="vertical" >
        
         <LinearLayout
            android:id="@+id/buttonBarLevel1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >
         
         <ImageButton
                android:id="@+id/voice_test_image_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/plum_button"
                android:onClick="onVoiceTestButtonClick"
                android:src="@drawable/voice_test_ic" />

            <ImageButton
                android:id="@+id/word_test_image_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:onClick="onWordTestButtonClick"
                android:src="@drawable/word_test_ic" />
            
            </LinearLayout>

        <!-- Button
                android:id="@+id/buttonVoiceTest"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/purple_button"
                android:onClick="onVoiceTestButtonClick"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Voice Test" />

            <Button
                android:id="@+id/buttonWordTest"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/purple_button"
                android:onClick="onWordTestButtonClick"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Word Test" /-->

    </LinearLayout>
	<TextView
        android:id="@+id/textViewNameLevel"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_marginBottom="28dp"
        android:text="Level 1/Lesson 1"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
</RelativeLayout>
