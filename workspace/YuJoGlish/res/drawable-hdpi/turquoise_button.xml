<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="false">        
         <layer-list>
             <!-- SHADOW -->   
             <item>
                 <shape>
                     <solid android:color="@color/cyan_700"/>
                     
                 </shape>
             </item>
             <!-- BUTTON -->
             <item android:bottom="5px">
                 <shape>
                     <padding android:bottom="5dp"/>
                     <gradient
                         android:endColor="@color/cyan_400"
                         android:startColor="@color/cyan_400"
                         android:angle="270" />
                     
                     <padding
                         android:left="10dp"
                         android:top="10dp"
                         android:right="10dp"
                         android:bottom="10dp"/>
                 </shape>
             </item>
         </layer-list> 
     </item>
    
    <item android:state_pressed="true">
        <layer-list>
             <!-- SHADOW -->   
             <item>
                 <shape>
                     <solid android:color="@color/cyan_700"/>
                     
                 </shape>
             </item>
             <!-- BUTTON -->
             <item android:bottom="5px">
                 <shape>
                     <padding android:bottom="5dp"/>
                     <gradient
                         android:endColor="@color/cyan_600"
                         android:startColor="@color/cyan_600"
                         android:angle="270" />
                     
                     <padding
                         android:left="10dp"
                         android:top="10dp"
                         android:right="10dp"
                         android:bottom="10dp"/>
                 </shape>
             </item>
         </layer-list> 
    </item>
</selector>