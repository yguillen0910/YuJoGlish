<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_titulo_modificar_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:background="@drawable/purple_button"
        android:gravity="left"
        android:paddingTop="10dp"
        android:text="@string/textview_titulo_agregar_usuario"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:src="@drawable/childs"
        android:contentDescription="@string/imagen_usuario" />

    <TextView
        android:id="@+id/textView_informativo_agregar_modificar_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/morado_medio"
        android:typeface="sans" />

    <EditText
        android:id="@+id/editText_nombre_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_nombre_usuario"
        android:inputType="textPersonName"
        android:textColor="@color/morado_medio"
        android:textColorHint="@color/morado_medio" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText_fechanac_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/hint_fecha_nacimiento"
        android:inputType="date"
        android:onClick="onclickEditFechaNac"
        android:textColorHint="@color/morado_medio"
        android:textColor="@color/morado_medio" />

    <Button
        android:id="@+id/button_guardar_agregar_usuario"
        android:layout_width="170dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/purple_button"
        android:onClick="onclickGuardarUsuario"
        android:text="@string/button_agregar_usuario"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:textStyle="bold" />

</LinearLayout>