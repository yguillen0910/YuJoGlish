                android:layout_weight="1"
                android:background="@drawable/orange_button"
                android:onClick="onLesson3ButtonClick"
                android:src="@drawable/shapes_ic" />
             
             <ImageButton
                android:id="@+id/numbers_image_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blue2_button"
                android:onClick="onLesson4ButtonClick"
                android:src="@drawable/numbers_ic" />

            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonBarLesson3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >
                                         
              <ImageButton
                android:id="@+id/animals_image_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blue_button"
                android:onClick="onLesson5ButtonClick"
                android:src="@drawable/animals_ic" />
             
             <ImageButton
                android:id="@+id/classroom_image_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/purple_button"
                android:onClick="onLesson6ButtonClick"
                android:src="@drawable/classroom_ic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonBarLesson4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >
            
           	<ImageButton
                android:id="@+id/face_image_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:onClick="onLesson7ButtonClick"
                android:src="@drawable/face_ic" />
             
             <ImageButton
                android:id="@+id/body_image_button"
                android:layout_width="match_parent"
