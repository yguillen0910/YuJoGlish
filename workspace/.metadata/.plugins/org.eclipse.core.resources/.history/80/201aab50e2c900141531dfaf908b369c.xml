<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey_300" >

    <TextView
        android:id="@+id/tVTitulo"
        style="@style/button_text_small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Elige una lecciÃ³n!!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_negro" />
    
    <ScrollView
        android:id="@+id/scrollViewLesson"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="419dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/buttonBarLesson1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >

           
            
            <ImageButton
                android:id="@+id/family_image_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/yellow_button"
                android:onClick="onLesson1ButtonClick"
                android:src="@drawable/family_ic" />

            <ImageButton
			        android:id="@+id/colors_image_button"
			        android:layout_width="match_parent"
			        android:layout_height="150dp"
			        android:layout_margin="5dp"
                	android:layout_weight="1"
                	android:onClick="onLesson2ButtonClick"			                
			        android:background="@drawable/green_button"
			        android:src="@drawable/colors_ic"
			       />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonBarLesson2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >

            
             <ImageButton
                android:id="@+id/shapes_image_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
